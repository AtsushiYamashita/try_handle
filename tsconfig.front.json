{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "pretty": true,
    "newLine": "lf",
    "outDir": "dist/front",
    "baseUrl": ".",
    "rootDirs": [
      "./src/front"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {},
    "lib": [
      "es2016",
      "dom",
      "es5"
    ]
  },
  "include": [
    "./src/front/"
  ],
  "exclude": [
    "node_modules",
    "./script/",
    "./tests/"
  ]
}